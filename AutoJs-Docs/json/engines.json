        {
          "textRaw": "ScriptEngine.emit(eventName[, ...args])",
          "type": "method",
          "name": "emit",
          "signatures": [
            {
              "params": [
                {
                  "textRaw": "`eventName` {string} 事件名称 ",
                  "name": "eventName",
                  "type": "string",
                  "desc": "事件名称"
